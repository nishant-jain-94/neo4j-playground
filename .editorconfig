# EditorConfig helps developer define and maintain consistent
# coding styles between different editors and IDE's
# editorconfig.org

# top most EditorConfig file
root = true

# Unix style newlines
# A new line ending every file
# Trim Trailing Whitespaces
# Charset UTF-8
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Two Space Indentation
[*]
indent_style = space
indent_size = 2
